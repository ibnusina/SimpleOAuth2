default_platform :ios

platform :ios do

  before_all do
    puts "Doin' some fastlane..."
    carthage(platform:"iOS")
  end

  desc "Runs all the tests (debug and release)"
  lane :specs do
    scan(scheme: "SimpleOAuth2",
         clean: true,
         configuration: "Debug",
         output_style: "rspec",
         code_coverage: true)
  end

  after_all do |lane|
    if lane.equal? :test
      puts "ğŸŒ® ğŸŒ® ğŸŒ®  Taco Time!  ğŸŒ® ğŸŒ® ğŸŒ®"
    end
  end

  error do |lane, exception|
    puts "uh oh...."
  end

end
